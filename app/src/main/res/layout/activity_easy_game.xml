    <Button
        android:id="@+id/menuBtn"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:text="Main Menu"
        android:typeface="monospace"
        app:strokeColor="#FDFDFD"
        app:strokeWidth="2dp" />
</LinearLayout>